   <li>banana</li>
   <li>mango</li>
 </ul>
 <button onclick="my()">click now</button>

<script>
    function my(){
        var ab=prompt();
       var x=document.createElement("li");
       var y=document.createTextNode(ab);
       x.appendChild(y);
       document.getElementById("myl").appendChild(x);
 
    }
</script>



